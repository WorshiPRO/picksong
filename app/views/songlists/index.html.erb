<p id="notice"><%= notice %></p>

<h1>歌單</h1>
<form class="form-inline mb-3">
<%= form_tag songlists_path, method: :get do %>
    <%= text_field_tag :search, params[:search], placeholder: "輸入歌名、樂團",class:"form-control mr-sm-2" %>
    <%= submit_tag "搜尋", name: nil, class: "btn btn-outline-secondary my-2 my-sm-0" %>
<% end %>
</form>
<table class="table">
  <thead>
    <tr>
      <th>歌名</th>
      <th>Key</th>
      <th>樂團</th>
      <th>網址</th>
      <th>類型</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songlists.each do |songlist| %>
      <tr>
        <td><%= link_to songlist.name,songlist%></td>
        <td><%= songlist.key %></td>
        <td><%= songlist.band %></td>
        <td><%= link_to '聽歌', songlist.url %></td>
        <td><%= songlist.category %></td>
        <td><%= link_to 'Edit', edit_songlist_path(songlist) if can? :update,songlist %></td>
        <td><%= link_to 'Destroy', songlist, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy,songlist%></td>
      </tr>
    <% end %>
  </tbody>
</table>

